<div class="post-admin" data-id="{{id}}">
  <span class="post-controls-vote">
    <span class="post-upvote" data-id="{{id}}">&uarr;</span> or
    <span class="post-downvote" data-id="{{id}}">&darr;</span>
  </span>
  |
  <span class="post-controls-sentiment">
    <span class="post-sentiment cursor" data-score="-1.0">😡</span>
    <span class="post-sentiment cursor" data-score="-0.5">😟</span>
    <span class="post-sentiment cursor" data-score="0.0">😐</span>
    <span class="post-sentiment cursor" data-score="0.5">🙂</span>
    <span class="post-sentiment cursor" data-score="1.0">😀</span>
    ...
    <span class="post-sentiment cursor" data-score="N/A">N/A</span>
  </span>
  |
  <span class="post-controls-delete">
    <a class="post-delete cursor red-hover" data-id="{{id}}">🗑️</a>
  </span>
</div>
